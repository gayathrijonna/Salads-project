<h1  style="text-align:center">Update Salad Information</h1>
<div class="field form-group" style="width: 100% ; height: 100%; color: black;  float:left;">
<%= bootstrap_form_with model: @curatedsalad, method: :post, url: admin_update_salad_path(@curatedsalad), data: { turbo:false } do |f| %>
  <div class='row'>
    <div class='col-6'>
      <%= f.text_field :saladName, label: 'Salad Name' %>
    </div>
    <div class='col-6'>
      <%= f.text_field :saladIngredients, label: 'Salad Ingredients ' %>
    </div>
  </div>

  <div class='row'>
    <div class='col-6'>
      <%= f.text_field :calories, label: 'Calories' %>
    </div>
    <div class='col-6'>
      <%= f.number_field :price_cents, label: 'Price' %>
    </div>
  </div>

  <div class='row'>
    <div class='col-6'>
      <%= f.text_field :quantities, label: 'Quantities' %>
    </div>
    <div class='col-6'>
      <%= f.text_field :discount, label: 'Discount' %>
    </div>
  </div>

  <div class='row'>
    <div class='col-6'>
        <% if @curatedsalad.salad_image.attached? %>
            <%= image_tag url_for(@curatedsalad.salad_image), class: "img-fluid", alt: "Salad image" %>
        <% end %>
        <%= f.file_field :salad_image %>
    </div>
    <div class='col-6 mt-5'>
        <%= f.check_box :outOfStock, label:'Out Of Stock', class: 'font-weight-bold', style: 'font-weight: bolder' %>
    </div>
  </div>  

  <div class='row'>
    <div class='col-6 d-flex'>
        <%= f.submit class: 'btn btn-primary' %>
    </div>
    <div class='col-6'>
        <p>
            <%= link_to 'Discard Changes', admin_curated_salads_path(@curatedsalads), class: 'btn btn-secondary' %>
        </p>
    </div>
  </div>  
<% end %>
 </div>  