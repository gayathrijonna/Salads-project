
<div class='container w-75'>
<h1 class='my-5' style='color: teal; font-weight: bolder; font-family: cursive; font-size: 3rem'> Salads Feed</h1>
<% @posts.each do |post| %>
    <div class="post card w-100 my-4" style='border-color: teal'>
      <div class='card-body'>
        <h5 class='card-title'><%= post.title %></h5>
        <p class='card-subtitle'>
            <%= post.content %>
        </p>
        <span class='card-footer' style='background-color: transparent; border: 0'>
          <button class='me-5 like-button' style='background-color: transparent; border: 0'>
            <i class="bi bi-hand-thumbs-up-fill"></i><label class='like-count'><%= post.likes %></label>
          </button>
          <button class='dislike-button me-5' style='background-color: transparent; border: 0'>
            <i class="bi bi-hand-thumbs-down-fill"></i><label class='dislike-count'><%= post.dislikes %></label>
          </button>
          <button class='comment-button' style='background-color: transparent; border: 0'>
            <i class="bi bi-chat-fill"></i><label class='comment-count'><%= 1 %></label>
          </button>
        </span>
        <div class='ms-4 me-auto py-3' style='width:70%'>
          <span class='row mb-2' style="border: 1px solid teal; padding: 12px; border-radius: 8px; min-width: 100%"> <%= post.comments %> </span>
          <input class='row mb-2' style="border: 1px solid teal; padding: 12px; border-radius: 8px; min-width: 100%" value='...........' type='text'/>
        </div>
      </div>
    </div>
<% end %>
</div>

